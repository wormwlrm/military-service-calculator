{
  "author": "wormwlrm",
  "name": "전역일 계산기",
  "description": "심플한 디자인의 위젯형 전역일 계산기입니다.",
  "version": "1.2.3",
  "manifest_version": 2,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "전역일 계산기",
    "default_popup": "popup/popup.html"
  },
  "applications": {
    "gecko": {
      "id": "wormwlrm@naver.com",
      "strict_min_version": "68.0"
    }
  },
  "permissions": ["storage"],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com https://www.googletagmanager.com 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": ["background.js"]
  }
}
